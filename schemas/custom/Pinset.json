{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pinset",
  "description": "A simple schema for storing a set of CIDs",
  "type": "object",
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/IPFSUrl"
      }
    }
  },
  "required": ["items"],
  "definitions": {
    "IPFSUrl": {
      "type": "string",
      "pattern": "^ipfs://.+",
      "maxLength": 150
    }
  }
}
